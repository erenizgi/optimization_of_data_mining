            "patch": "@@ -0,0 +1,31 @@\n+{\n+  \"version\": \"2.0.0\",\n+  \"tasks\": [\n+    {\n+      \"label\": \"types\",\n+      \"command\": \"pnpm\",\n+      \"args\": [\"typescript\", \"--watch\"],\n+      \"isBackground\": true,\n+      \"group\": {\n+        \"kind\": \"build\"\n+      },\n+      \"problemMatcher\": [\"$tsc-watch\"]\n+    },\n+    {\n+      \"label\": \"types-next\",\n+      \"command\": \"pnpm\",\n+      \"args\": [\"types\", \"--watch\"],\n+      \"options\": {\n+        \"cwd\": \"${workspaceFolder}/packages/next\"\n+      },\n+      \"isBackground\": true,\n+      \"group\": {\n+        \"kind\": \"build\"\n+      },\n+      \"problemMatcher\": {\n+        \"base\": \"$tsc-watch\",\n+        \"fileLocation\": [\"relative\", \"${workspaceFolder}/packages/next\"]\n+      }\n+    }\n+  ]\n+}"
        }
