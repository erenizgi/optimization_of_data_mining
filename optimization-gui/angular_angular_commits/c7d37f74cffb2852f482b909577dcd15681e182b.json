            "patch": "@@ -114,6 +114,8 @@ describe('@angular/common ng_package', () => {\n             node: './fesm2015/upgrade.mjs',\n             default: './fesm2020/upgrade.mjs',\n           },\n+          './locales/global/*': {default: './locales/global/*.js'},\n+          './locales/*': {default: './locales/*.mjs'},\n         }\n       }));\n     });"
